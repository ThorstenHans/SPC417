    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SharePoint - PictureBrowser</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="sharepoint-chrome"></div>
    <ul class="nav nav-pills pull-right">
      <li><a href="@Url.Action("Home", "Home",true)">Home</a></li>
      <li><a href="@Url.Action("Home", "Wall",true)#">Wall</a></li>
